<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventSnap.Views.LoadingPage"
             Title="Loading">

    <StackLayout Orientation="Horizontal">
        <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Spacing="40">
            <ActivityIndicator
                IsRunning="True" />
            
            <Label 
                x:Name="LoadingLabel" 
                Style="{StaticResource SubHeadline}" />
            
        </StackLayout>
    </StackLayout>

</ContentPage>